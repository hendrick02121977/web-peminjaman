//Create Data

function createData() {
  let data = {
    nama: namaV.value,
    nohp: nohpV.value,
	kelas: kelasV.value,
	jam: jamV.value,
	tanggal: tanggalV.value,
	barang: barangV.value
  };
  database.ref("Data_Peminjam").push(data);
  namaV.value = "";
  nohpV.value = "";
  kelasV.value = "";
  jamV.value = "";
  tanggalV.value = "";
  barangV.value = "";
}

